	#tag Method, Flags = &h21
		Private Sub LoadContextsAndRestoreSelection(contextIDToSelect As Integer)
		  LoadContexts
		  
		  // Find and select the row with the matching context ID
		  If contextIDToSelect > 0 Then
		    For i As Integer = 0 To lstContexts.LastRowIndex
		      If lstContexts.RowTagAt(i) = contextIDToSelect Then
		        lstContexts.SelectedRowIndex = i
		        Exit For
		      End If
		    Next
		  End If
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub ReorderContexts()
		  // Update sort_order for all contexts based on current listbox order
		  Try
		    For i As Integer = 0 To lstContexts.LastRowIndex
		      Var contextID As Integer = lstContexts.RowTagAt(i)
		      
		      Var sql As String = "UPDATE contexts SET sort_order = ? WHERE id = ?"
		      Var ps As MySQLPreparedStatement = Session.DB.Prepare(sql)
		      
		      ps.BindType(0, MySQLPreparedStatement.MYSQL_TYPE_LONG)
		      ps.BindType(1, MySQLPreparedStatement.MYSQL_TYPE_LONG)
		      
		      ps.Bind(0, i)
		      ps.Bind(1, contextID)
		      
		      ps.ExecuteSQL
		    Next
		    
		  Catch err As DatabaseException
		    MessageBox("Error updating sort order: " + err.Message)
		  End Try
		End Sub
	#tag EndMethod


