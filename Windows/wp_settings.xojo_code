#tag Events btnAddContext
	#tag Event
		Sub Pressed()
		  If Not Session.IsAuthenticated Then
		    MessageBox("You must be authenticated to add contexts")
		    Return
		  End If
		  
		  Try
		    // Get the highest sort_order
		    Var maxSortOrder As Integer = 0
		    Var sql As String = "SELECT MAX(sort_order) AS max_order FROM contexts"
		    Var rs As RowSet = Session.DB.SelectSQL(sql)
		    If Not rs.AfterLastRow And rs.Column("max_order").Value <> Nil Then
		      maxSortOrder = rs.Column("max_order").IntegerValue
		    End If
		    
		    // Create new context with default name
		    Var ctx As New Context
		    ctx.Name = "New Context"
		    ctx.IsActive = True
		    ctx.SortOrder = maxSortOrder + 1
		    
		    // Save with audit
		    If ctx.SaveWithAudit(Session.DB, Session.CurrentUsername) Then
		      // Reload to show new context
		      LoadContexts
		      
		      // Select the new row (should be last)
		      lstContexts.SelectedRowIndex = lstContexts.LastRowIndex
		      
		      // Scroll to the new row
		      lstContexts.ScrollTo(lstContexts.LastRowIndex)
		      
		      // Put it in edit mode so user can rename immediately
		      lstContexts.EditCellAt(lstContexts.LastRowIndex, 1)
		      
		    Else
		      MessageBox("Error adding context")
		    End If
		    
		  Catch err As DatabaseException
		    MessageBox("Error: " + err.Message)
		  End Try
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events btnMoveUp
	#tag Event
		Sub Pressed()
		  If Not Session.IsAuthenticated Then Return
		  
		  Var selectedRow As Integer = lstContexts.SelectedRowIndex
		  If selectedRow <= 0 Then Return // Can't move first row up
		  
		  Try
		    // Get context IDs
		    Var currentID As Integer = lstContexts.RowTagAt(selectedRow)
		    Var aboveID As Integer = lstContexts.RowTagAt(selectedRow - 1)
		    
		    // Load both contexts
		    Var currentCtx As Context = Context.GetByID(Session.DB, currentID)
		    Var aboveCtx As Context = Context.GetByID(Session.DB, aboveID)
		    
		    If currentCtx = Nil Or aboveCtx = Nil Then
		      MessageBox("Error loading contexts")
		      Return
		    End If
		    
		    // Swap sort orders
		    Var tempOrder As Integer = currentCtx.SortOrder
		    currentCtx.SortOrder = aboveCtx.SortOrder
		    aboveCtx.SortOrder = tempOrder
		    
		    // Save both with audit
		    Call currentCtx.SaveWithAudit(Session.DB, Session.CurrentUsername)
		    Call aboveCtx.SaveWithAudit(Session.DB, Session.CurrentUsername)
		    
		    // Reload and maintain selection
		    LoadContexts
		    lstContexts.SelectedRowIndex = selectedRow - 1
		    
		  Catch err As DatabaseException
		    MessageBox("Error moving context: " + err.Message)
		    LoadContexts
		  End Try
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events btnMoveDown
	#tag Event
		Sub Pressed()
		  If Not Session.IsAuthenticated Then Return
		  
		  Var selectedRow As Integer = lstContexts.SelectedRowIndex
		  If selectedRow < 0 Or selectedRow >= lstContexts.LastRowIndex Then Return // Can't move last row down
		  
		  Try
		    // Get context IDs
		    Var currentID As Integer = lstContexts.RowTagAt(selectedRow)
		    Var belowID As Integer = lstContexts.RowTagAt(selectedRow + 1)
		    
		    // Load both contexts
		    Var currentCtx As Context = Context.GetByID(Session.DB, currentID)
		    Var belowCtx As Context = Context.GetByID(Session.DB, belowID)
		    
		    If currentCtx = Nil Or belowCtx = Nil Then
		      MessageBox("Error loading contexts")
		      Return
		    End If
		    
		    // Swap sort orders
		    Var tempOrder As Integer = currentCtx.SortOrder
		    currentCtx.SortOrder = belowCtx.SortOrder
		    belowCtx.SortOrder = tempOrder
		    
		    // Save both with audit
		    Call currentCtx.SaveWithAudit(Session.DB, Session.CurrentUsername)
		    Call belowCtx.SaveWithAudit(Session.DB, Session.CurrentUsername)
		    
		    // Reload and maintain selection
		    LoadContexts
		    lstContexts.SelectedRowIndex = selectedRow + 1
		    
		  Catch err As DatabaseException
		    MessageBox("Error moving context: " + err.Message)
		    LoadContexts
		  End Try
		End Sub
	#tag EndEvent
#tag EndEvents
